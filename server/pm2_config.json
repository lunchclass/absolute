{
  "apps" : [{
    "name": "absolute",
    "script": "./server.js",
    "cwd": "./",
    "error_file": "../log/error.log",
    "out_file": "../log/output.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "watch": false,
    "ignore_watch": ["pm2_config.json", "node_modules", "package.json"],
    "env": {
      "NODE_ENV": "development"
    },
    "env_production": {
       "NODE_ENV": "production"
    }
  }]
}
