    "noImplicitReturns": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "experimentalDecorators": true
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "server/**/*.test.ts"
  ]
}
