{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["webworker", "es6", "scripthost"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": [
    "server/**/*.test.ts",
    "client/**/*.test.ts",
    "bootstrap/**/*.test.ts"
  ],
  "include": [
    "server/**/*.ts"
  ]
}
