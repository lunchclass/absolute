{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "server/**/*.test.ts",
    "bootstrap/**/*.test.ts"
  ],
  "include": [
    "server/**/*.ts"
  ]
}
